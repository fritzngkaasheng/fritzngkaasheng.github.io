<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Test Suite" thread-count="3" parallel="tests" >
    <test name="Parallel Test Chrome" >
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="io.github.fritzngkaasheng.ChromeTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Parallel Test Firefox" >
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="io.github.fritzngkaasheng.FirefoxTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Parallel Test Edge" >
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="io.github.fritzngkaasheng.EdgeTest"/>
        </classes>
    </test> <!-- Test -->
</suite> <!-- Suite -->